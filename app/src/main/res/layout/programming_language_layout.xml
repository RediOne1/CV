<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

	<TextView
		android:id="@+id/programming_language_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/programming_language_skill_layout"
		android:layout_toStartOf="@+id/programming_language_skill_layout"
		android:textSize="20sp"/>

	<LinearLayout
		android:id="@+id/programming_language_skill_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginTop="5dp"
		android:orientation="horizontal">
	</LinearLayout>

</RelativeLayout>